{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "vkguide-env",
  "version": "1.0.0",
  "dependencies": [
    {
      "name": "sdl2",
      "features": [
        "vulkan",
        { "name": "x11", "platform": "linux" },
        { "name": "wayland", "platform": "linux" }
      ]
    },
    {
      "name": "vulkan-headers"
    },
    {
      "name": "vulkan-memory-allocator"
    },
    {
      "name": "glm"
    },
    {
      "name": "fmt"
    },
    {
      "name": "spdlog"
    },
    {
      "name": "abseil"
    },
    {
      "name": "imgui",
      "features": ["sdl2-binding", "vulkan-binding"]
    }
  ]
}
